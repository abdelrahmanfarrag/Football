<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <TextView
    android:id="@+id/sectionNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_padding_size_xsmall"
    android:fontFamily="@font/cairo_black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
   app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/homeValueTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_padding_size_xsmall"
    android:fontFamily="@font/cairo_semi_bold"
    android:textColor="@color/gray"
    app:layout_constraintBottom_toBottomOf="@id/sectionNameTextView"
    app:layout_constraintStart_toEndOf="@+id/sectionNameTextView"
    app:layout_constraintTop_toTopOf="@+id/sectionNameTextView" />

  <TextView
    android:id="@+id/awayValueTextValue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_padding_size_xsmall"
    android:fontFamily="@font/cairo_semi_bold"
    android:textColor="@color/gray"
    app:layout_constraintBottom_toBottomOf="@id/sectionNameTextView"
    app:layout_constraintEnd_toStartOf="@+id/sectionNameTextView"
    app:layout_constraintTop_toTopOf="@+id/sectionNameTextView" />


  <ProgressBar
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:indeterminate="false"
    android:max="100"
    android:id="@+id/statisticProgress"
    android:progressDrawable="@drawable/progress_drawable"
    android:progress="25"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sectionNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>